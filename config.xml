<?xml version='1.0' encoding='utf-8'?>
<widget id="com.scholarships.pakistan" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" 
xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Scholarships Pakistan</name>
    <description>
        An app for Scholarships in Pakistan
    </description>
    <author email="maher@afrasiab.me" href="https://afrasiab.me">
        Maher Afrasiab
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-targetSdkVersion" value="29" />
        <allow-intent href="market:*" />
        <preference name="AndroidXEnabled" value="true" />

    </platform>
    
    <preference name="DisallowOverscroll" value="true" />
   
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
   <plugin name="cordova-plugin-screen-orientation" source="npm" />
<plugin name="cordova-admob-plus" source="npm">
        <variable name="APP_ID_ANDROID" value="ca-app-pub-5517499679401400~5371187500" />
        <variable name="APP_ID_IOS" value="ca-app-pub-5517499679401400~5371187500" />
    </plugin>
   
    <preference name="orientation" value="portrait" />
    <preference name="android-build-tool" value="gradle" /> 
    
    
    <preference name="phonegap-version" value="cli-8.0.0" />

    <icon src="icon144.png" />
</widget>